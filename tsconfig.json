{
    "compilerOptions": {
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "target": "es5",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@routes/*": [
                "./src/routes/*"
            ],
            "@test-utils/*": [
                "./tests/http/utils/*"
            ],
            "@src/*": [
                "./src/*"
            ]
        },
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}